	<body>

		<!-- Main jumbotron for a primary marketing message or call to action -->
		<div class="jumbotron">
			<div class="container">
				<h1>회원가입</h1>
			</div>
		</div>
		<form action="/" method='post'>
			<div class="form-group row">
				<label for="signUp-id" class="col-xs-2 col-form-label">ID</label>
