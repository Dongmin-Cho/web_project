<!-- Main jumbotron for a primary marketing message or call to action -->

<div class="jumbotron">
    <div class="container">
        <h1>레시피 입력</h1>
    </div>
</div>

<div class="container">

    <!-- 상세보기 -->

    <div class="row">
        <!-- 상세 타이틀 -->

        <hr />
    </div>

    <!-- 작성 Form -->
    <form method="post" action="/recipe-inserted">
        <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">작성자</label>
            <div class="col-xs-10">
                <input class="form-control" type="text" name="userId" id="example-text-input" value='<%= userName %>' readonly/>
            </div>
        </div>

        <div class="form-group row">
            <label for="example-search-input" class="col-xs-2 col-form-label">요리 이름</label>
            <div class="col-xs-10">
                <input class="form-control" type="text" name="recipeName" placeholder="Write name of recipe" id="example-search-input">
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-xs-2 col-form-label">재료</label>
            <div class="col-xs-10">
                <input class="form-control" type="text" name="materials" placeholder="Please divide materials by ,(comma)" id="example-number-input">
            </div>
        </div>
        <div class="form-group row">
            <label for="example-email-input" class="col-xs-2 col-form-label">조리법</label>
            <div class="col-xs-10">
                <textarea class="form-control" type="text" name="recipe" placeholder="Write recipe" id="example-email-input"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-number-input" class="col-xs-2 col-form-label">이미지</label>
            <div class="col-xs-10">
                <input class="form-control" type="text" name="image" placeholder="Enter URL source of image" id="example-number-input">
            </div>
        </div>

        <div class="col-xs-25">
            <button type="submit" class="btn btn-success">등록하기</button>
        </div>

    </form>
    <!-- /작성 Form -->


    <hr>

    <footer>
        <p><p>
    </footer>
</div>
<!-- /container -->
